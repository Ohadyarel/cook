<div id="recipe_show">
	<%= @recipe.title %>
	<%= @recipe.publisher %>
	<%= image_tag @recipe.image_url %>
	<ul>
		<% @recipe.ingredients.each do |ing| %>
			<li><%= ing %></li>
		<% end %>
	</ul>
	<%= link_to "View directions", @recipe.source_url %>
	<% if logged_in? %>
		<% if !@favorite %>
			<%= button_to "Favorite", favorites_path(recipe_id: @recipe.id) %>
		<% else %>
			<%= button_to "UnFavorite", favorite_path(@favorite), method: :delete %>
		<% end %>
	<% end %>

</div>