<div class="pantry_section" id="1">
	<h2>Oils, Vinegars and Condiments</h2>
	<div class="pantry_list">
		<ul id="1_list">
			<% @pantry[1].each do |ing| %>
				<li>
					<span class="ing"><%= ing %></span> 
					<span class="delete_ing">X</span>
				</li>
			<% end %>
		</ul>
		<div class="pantry_form">
			<input type"text" placeholder="Add ingredient and press enter" class="pantry_input">
		</div>
	</div>
</div>
